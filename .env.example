# Discord
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_application_id
# Optional: comma-separated guild IDs for instant slash commands (dev)
GUILD_ID=guild_id_1,guild_id_2

# Lavalink: local = localhost:2333, server = public/remote node (set one)
# LAVALINK_MODE=server
LAVALINK_MODE=local

# Server / public node (used when LAVALINK_MODE=server or unset)
LAVALINK_HOST=lavalink.example.com
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass
LAVALINK_SECURE=false

# Localhost (used when LAVALINK_MODE=local)
LAVALINK_LOCAL_HOST=localhost
LAVALINK_LOCAL_PORT=2333
LAVALINK_LOCAL_PASSWORD=youshallnotpass
LAVALINK_LOCAL_SECURE=false

# Server mode: delay (ms) between reconnect attempts, max attempts
LAVALINK_RETRY_DELAY_MS=60000
LAVALINK_RETRY_AMOUNT=100
